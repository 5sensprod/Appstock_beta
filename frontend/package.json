{
  "name": "appstock_beta",
  "version": "0.3.2",
  "main": "main.js",
  "private": true,
  "homepage": "/",
  "author": "5SENSPROD",
  "description": "Appstock",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@heroicons/react": "^2.1.5",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9",
    "express": "^4.21.1",
    "fontfaceobserver": "^2.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "papaparse": "^5.4.1",
    "qrcode": "^1.5.4",
    "react-colorful": "^5.6.1",
    "tree-kill": "^1.2.2"
  },
  "scripts": {
    "start": "concurrently \"npm run start-next\" \"npm run start-flask\" \"npm run start-electron\"",
    "start-next": "next dev",
    "start-flask": "node ../backend/start_flask.js",
    "start-electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build-next && npm run build-pyinstaller && npm run clean-pyinstaller && npm run build-electron && electron-builder --publish onTag",
    "build-next": "next build",
    "build-pyinstaller": "call ../backend/.venv/Scripts/activate && cd ../backend && pyinstaller --noconfirm --clean --onefile --noconsole app.py && cd ../frontend",
    "clean-pyinstaller": "rimraf ../backend/build ../backend/__pycache__ ../backend/utils/__pycache__ ../backend/routes/__pycache__",
    "build-electron": "electron-builder",
    "test": "next test",
    "eject": "next eject"
  },
  "proxy": "http://localhost:5001",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.3.9",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "fabric": "^6.4.3",
    "fs-extra": "^11.2.0",
    "next": "^14.2.15",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13"
  },
  "build": {
    "appId": "com.example.appstock_beta",
    "productName": "AppStock Beta",
    "files": [
      "out/**/*",
      "electron/**/*",
      "main.js",
      "preload.js",
      "scripts_package/express-server.js",
      "assets/fonts/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/app.exe",
        "to": "backend/app.exe"
      },
      {
        "from": "out",
        "to": "frontend/out"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "5sensprod",
        "repo": "Appstock_beta",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AppStock Beta"
    },
    "extends": null,
    "win": {
      "target": "nsis"
    }
  }
}
