{
  "name": "appstock_beta",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "homepage": "/",
  "author": "Ton Nom",
  "description": "Mon application Electron avec React et Flask",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "tree-kill": "^1.2.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run start-flask\" \"npm run start-electron\"",
    "start-react": "react-scripts start",
    "start-flask": "node ../backend/start_flask.js",
    "start-electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build-react && npm run copy-react-build && npm run build-pyinstaller && npm run clean-pyinstaller && npm run build-electron",
    "build-react": "react-scripts build",
    "copy-react-build": "node ./scripts/copy-react-build.js",
    "build-pyinstaller": "call ../backend/.venv/Scripts/activate && cd ../backend && pyinstaller --onefile --noconsole --add-data \"react_build;react_build\" app.py && cd ../frontend",
    "clean-pyinstaller": "rimraf ../backend/build ../backend/__pycache__ ../backend/app.spec",
    "build-electron": "electron-builder",
    "electron": "electron .",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "proxy": "http://localhost:5000",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.example.monapp",
    "productName": "MonApp",
    "files": [
      "build/**/*",
      "electron/**/*",
      "main.js",
      "preload.js",
      {
        "from": "../backend/dist/",
        "to": "resources/backend/dist/"
      }
    ],
    "extraFiles": [
      {
        "from": "../backend/dist/",
        "to": "resources/backend/dist/"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MonApp"
    },
    "extends": null,
    "win": {
      "target": "nsis"
    }
  }
}
