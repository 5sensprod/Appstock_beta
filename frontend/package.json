{
  "name": "appstock_beta",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "homepage": "/",
  "author": "Ton Nom",
  "description": "Mon application Electron avec React et Flask",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "next": "^14.2.15",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tree-kill": "^1.2.2"
  },
  "scripts": {
    "start": "concurrently \"npm run start-next\" \"npm run start-flask\" \"npm run start-electron\"",
    "start-next": "next dev",
    "start-flask": "node ../backend/start_flask.js",
    "start-electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build-next && npm run copy-next-build && npm run build-pyinstaller && npm run clean-pyinstaller && npm run build-electron",
    "build-next": "next build",
    "copy-next-build": "node ./scripts_package/copy-build.js",
    "build-pyinstaller": "call ../backend/.venv/Scripts/activate && cd ../backend && pyinstaller --onefile --noconsole --add-data \"react_build;react_build\" app.py && cd ../frontend",
    "clean-pyinstaller": "rimraf ../backend/build ../backend/__pycache__ ../backend/app.spec ../backend/utils/__pycache__ ../backend/routes/__pycache__",
    "build-electron": "electron-builder",
    "electron": "electron .",
    "test": "next test",
    "eject": "next eject"
  },
  "proxy": "http://localhost:5000",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "fs-extra": "^11.2.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.example.monapp",
    "productName": "AppStock Beta",
    "compression": "maximum",
    "files": [
      "out/**/*",
      "electron/**/*",
      "main.js",
      "preload.js",
      {
        "from": "../backend/dist/",
        "to": "resources/backend/dist/"
      }
    ],
    "extraFiles": [
      {
        "from": "../backend/dist/",
        "to": "resources/backend/dist/"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AppStock Beta"
    },
    "extends": null,
    "win": {
      "target": "nsis"
    }
  }
}
